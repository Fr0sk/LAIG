            </children>
        </component>
        <component id="treePosition10">
            <transformation>
                <translate x="-10" y="0" z="-20" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition11">
            <transformation>
                <translate x="-20" y="0" z="-20" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition12">
            <transformation>
                <translate x="-20" y="0" z="-10" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition13">
            <transformation>
                <translate x="-20" y="0" z="0" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition14">
            <transformation>
                <translate x="-20" y="0" z="10" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition15">
            <transformation>
                <translate x="-20" y="0" z="20" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition16">
            <transformation>
                <translate x="-10" y="0" z="20" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>

        <component id="buildings">
            <transformation>
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="building" />
            <children>
                <componentref id="buildingPosition1" />
                <componentref id="buildingPosition2" />
            </children>
        </component>
        <component id="floorTransform">
            <transformation>
                <scale x="40" y="1" z="40" />
                <transformationref id="rotateX-90" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="sidewalk" />
            <children>
                <primitiveref id="rect" />
            </children>
        </component>
        <component id="buildingPosition1">
            <transformation>
                <translate x="0" y="0" z="-30" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="building" />
            <children>
                <componentref id="firstLevelBuildingBlockTransform" />
                <componentref id="secondLevelBuildingBlockTransform" />
                <componentref id="thirdLevelBuildingBlockTransform" />
                <componentref id="forthLevelBuildingBlockTransform" />
            </children>
        </component>
        <component id="buildingPosition2">
            <transformation>
                <translate x="0" y="0" z="30" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="building" />
            <children>
                <componentref id="firstLevelBuildingBlockTransform" />
                <componentref id="secondLevelBuildingBlockTransform" />
                <componentref id="thirdLevelBuildingBlockTransform" />
                <componentref id="forthLevelBuildingBlockTransform" />
            </children>
        </component>
        <component id="firstLevelBuildingBlockTransform">
            <transformation>
                <translate x="0" y="10" z="0" />
                <scale x="15" y="20" z="15" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="cubeTransform" />
            </children>
        </component>
        <component id="secondLevelBuildingBlockTransform">
            <transformation>
                <translate x="0" y="25" z="0" />
                <scale x="13" y="10" z="11" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="cubeTransform" />
            </children>
        </component>
        <component id="thirdLevelBuildingBlockTransform">
            <transformation>
                <translate x="0" y="36" z="0" />
                <scale x="8" y="12" z="8" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="cubeTransform" />
            </children>
        </component>
        <component id="forthLevelBuildingBlockTransform">
            <transformation>
                <translate x="0" y="49" z="0" />
                <scale x="4" y="15" z="4" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="cubeTransform" />
            </children>
        </component>
        <component id="cubeTransform">
            <transformation></transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="topRectChangedTexture" />
                <componentref id="leftRect" />
                <componentref id="rightRect" />
                <componentref id="frontRect" />
                <componentref id="backRect" />
            </children>
        </component>
        <component id="topRectChangedTexture">
            <transformation>
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="topBuilding" />
            <children>
                <componentref id="topRect" />
            </children>
        </component>
        <component id="topRect">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>
        </component>
        <component id="bottomRect">
            <transformation>
                <rotate axis="x" angle="90" />
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>
        </component>
        <component id="leftRect">
            <transformation>
                <rotate axis="y" angle="-90" />
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
