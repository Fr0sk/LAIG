            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>
        </component>
        <component id="frontRect">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
