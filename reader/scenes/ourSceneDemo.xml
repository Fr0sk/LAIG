            </children>
        </component>
        <component id="backRect">
            <transformation>
                <rotate axis="y" angle="180" />
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>
        </component>
        <component id="treeBody">
            <transformation>
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="treeWood" />
            <children>
                <primitiveref id="cylinder1" />
            </children>
        </component>
        <component id="treeLeafes">
            <transformation>
                <translate x="0" y="5" z="0" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="treeLeafes" />
            <children>
                <primitiveref id="sphere1" />
            </children>
        </component>
    </components>
</dsx>