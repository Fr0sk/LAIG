<dsx>
    <!-- Scene root definition and axis length -->
    <scene root="root" axis_length="20" />
    <!-- Cameras definition -->
    <!-- Pressing v/V changes between cameras -->
    <views default="MainCamera">
        <perpective id="persp1" near="0.1" far="500" angle="0.4">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perpective>
        <perpective id="persp2" near="0.1" far="500" angle="0.4">
            <from x="15" y="0" z="15" />
            <to x="0" y="0" z="0" />
        </perpective>
        <perpective id="persp3" near="0.1" far="500" angle="0.4">
            <from x="-4" y="5" z="15" />
            <to x="0" y="0" z="0" />
        </perpective>
    </views>
    <!-- Illumination parameters set -->
    <illumination doublesided="0" local="1">
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </illumination>
    <!-- Lights instances set -->
    <lights>
        <!-- Must include at least 1 omni light and 1 spot light -->
        <omni id="omni1" enabled="1">
            <location x="5" y="5" z="5" w="0" />
            <ambient r="1" g="0.5" b="0" a="1" />
            <diffuse r="1" g=".05" b="0" a="1" />
            <specular r="0" g="0.5" b="0.5" a="1" />
        </omni>
        <spot id="spot1" enabled="1" angle="30" exponent="1">
            <target x="0" y="0" z="0" />
            <!-- What is target? -->
            <location x="5" y="0" z="2" />
            <ambient r="1" g="0.5" b="0" a="1" />
            <diffuse r="1" g="0.5" b="0" a="1" />
            <specular r="0" g="0.5" b="0.5" a="1" />
        </spot>
    </lights>
    <!-- Textures set -->
    <!-- Must include at least one texture block -->
    <textures>
        <texture id="crate" file="../assets/crate.png" length_s="1" length_t="1" />
        <texture id="wood" file="../assets/wood.jpg" length_s="1" length_t="1" />
        <texture id="earth" file="../assets/earth.jpg" length_s="1" length_t="1" />
        <texture id="sidewalk" file="../assets/sidewalk.jpg" length_s="1" length_t="1" />
        <texture id="building" file="../assets/building.jpg" length_s="1" length_t="1" />
        <texture id="topBuilding" file="../assets/topBuilding.jpg" length_s="1" length_t="1" />
        <texture id="treeLeafes" file="../assets/treeLeafes.png" length_s="1" length_t="1" />
        <texture id="treeWood" file="../assets/treeWood.jpg" length_s="1" length_t="1" />
    </textures>
    <!-- Materials set -->
    <!-- Must include at least one material block -->
    <materials>
        <material id="materialDefault">
            <emission r="0" g="0" b="0.1" a="1" />
            <ambient r="0.1" g="0.4" b="0.8" a="1" />
            <diffuse r="0.1" g="0.4" b="0.8" a="1" />
            <specular r="0.1" g="0.04" b="0.01" a="1" />
            <shininess value="50" />
        </material>
        <material id="materialGlow">
            <emission r="0.8" g="0" b="0" a="0" />
            <ambient r="0.8" g="0" b="0" a="1" />
            <diffuse r="0.8" g="0" b="0" a="1" />
            <specular r="0.8" g="0" b="0" a="1" />
            <shininess value="50" />
        </material>
    </materials>
    <!-- Transformations set -->
    <!-- Must include at least one transformation block -->
    <transformations>
        <transformation id="forwardX">
            <translate x="1" y="0" z="0" />
        </transformation>
        <transformation id="forwardY">
            <translate x="0" y="1" z="0" />
        </transformation>
        <transformation id="forwardZ">
            <translate x="0" y="0" z="1" />
        </transformation>
        <transformation id="rotateX90">
            <rotate axis="x" angle="90" />
        </transformation>
        <transformation id="rotateX-90">
            <rotate axis="x" angle="-90" />
        </transformation>
        <transformation id="rotateY90">
            <rotate axis="y" angle="90" />
        </transformation>
        <transformation id="rotateY-90">
            <rotate axis="y" angle="-90" />
        </transformation>
        <transformation id="rotateZ90">
            <rotate axis="z" angle="90" />
        </transformation>
        <transformation id="rotateZ-90">
            <rotate axis="z" angle="-90" />
        </transformation>
        <transformation id="scale2X">
            <scale x="2" y="1" z="1" />
        </transformation>
        <transformation id="scale2Y">
            <scale x="1" y="2" z="1" />
        </transformation>
        <transformation id="scale2Z">
            <scale x="1" y="1" z="2" />
        </transformation>
    </transformations>
    <!-- Primitives set -->
    <!-- Must include at least one primitive block -->
    <primitives>
        <primitive id="rect">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="3" y2="0" z2="0" x3="3" y3="3" z3="0" />
        </primitive>
        <primitive id="sphere1">
            <sphere radius="2" slices="5" stacks="10" />
        </primitive>
        <primitive id="cylinder1">
            <cylinder base="0.5" top="0.8" height="5" slices="15" stacks="5" />
        </primitive>
        <!--primitive id="unitCylinder"><cylinder base="1" top="1" height="1" slices="1" stacks="1" /></primitive><primitive id="unitSphere"><sphere radius="1" slices="1" stacks="1" /></primitive><primitive id="unitTorus"><torus inner="0.5" outer="0.5" slices="1" loops="1" /></primitive-->
    </primitives>
    <!-- Components set -->
    <components>
        <component id="componentRoot">
            <!-- Declaration needs to he here, even if there's no applied transformation' -->
            <transformation>
                <!-- Do a reference to one of the transformations -->
                <!-- ex: transformationref id="transformation1" -->
                <!-- or leave blank -->
            </transformation>
            <!-- At least one material -->
            <!-- Use m/M to change between materials -->
            <!-- Set id="inherit" to inherit parent's material -->
            <!-- Can also apply to textures -->
            <materials>
                <material id="materialDefault" />
            </materials>
            <!-- declaracao obrigatoria de texture -->
            <!-- id="inherit" mantem (herda) a textura do objecto "pai" -->
            <!-- id="none" remove a textura recebida do pai -->
            <!-- a textura declarada sobrepoe a textura recebida do -->
            <!-- objecto "pai" -->
            <texture id="none" />
            <children>
                <!--componentref id="earth1" /><componentref id="earth2" /-->
                <componentref id="floorTransform" />
                <componentref id="buildings" />
                <componentref id="trees" />
            </children>
        </component>
        <component id="trees">
            <transformation>
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treePosition1" />
                <componentref id="treePosition2" />
                <componentref id="treePosition3" />
                <componentref id="treePosition4" />
                <componentref id="treePosition5" />
                <componentref id="treePosition6" />
                <componentref id="treePosition7" />
                <componentref id="treePosition8" />
                <componentref id="treePosition9" />
                <componentref id="treePosition10" />
                <componentref id="treePosition11" />
                <componentref id="treePosition12" />
                <componentref id="treePosition13" />
                <componentref id="treePosition14" />
                <componentref id="treePosition15" />
                <componentref id="treePosition16" />
            </children>
        </component>
        <component id="treePosition1">
            <transformation>
                <translate x="0" y="0" z="20" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition2">
            <transformation>
                <translate x="10" y="0" z="20" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition3">
            <transformation>
                <translate x="20" y="0" z="20" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition4">
            <transformation>
                <translate x="20" y="0" z="10" />
            </transformation>
            <materials>
                <material id="materialDefault" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="treeBody" />
                <componentref id="treeLeafes" />
            </children>
        </component>
        <component id="treePosition5">
            <transformation>
                <translate x="20" y="0" z="0" />
